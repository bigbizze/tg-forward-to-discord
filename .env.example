# Database Configuration
SQLITE_PATH="bridge.db"

# Telegram API Credentials
# Get these from https://my.telegram.org
API_ID="<your_telegram_api_id>"
API_HASH="<your_telegram_api_hash>"

# Express Server Configuration
PROCESSOR_SERVER_LISTEN_URL="http://localhost:6969"
PROCESSOR_SERVER_POST_MSG_PATH="process"
PROCESSOR_SERVER_CONFIG_PATH="config"
PROCESSOR_SERVER_LOG_PATH="log"
PROCESSOR_SERVER_TOKEN="<your_secure_token_here>"

# Discord Bot Configuration
DISCORD_BOT_TOKEN="<your_discord_bot_token>"
DISCORD_CLIENT_ID="<your_discord_client_id>"

# Logging Configuration
# Discord webhook for error/log notifications (optional - leave empty to disable)
LOGGING_DISCORD_WEBHOOK_URL=""
HTML_LOG_VIEWER_TOKEN="<change-this-to-a-secure-random-token>"

# Scraper Configuration
# Default cron schedule for polling fallback (every 10 minutes)
DEFAULT_CRON="*/10 * * * *"

# VPS Configuration (Hetzner Cloud)
HCLOUD_TOKEN="<your_hcloud_token>"
HCLOUD_SERVER_TYPE="cx22"
HCLOUD_IMAGE="ubuntu-22.04"
HCLOUD_LOCATION="hel1"
# Your IP address for SSH access (comma-separated for multiple IPs)
HCLOUD_ALLOWED_IPS="99.233.26.180"